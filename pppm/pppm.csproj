<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <AssemblyName>pppm</AssemblyName>
    <Authors>David Morasz</Authors>
    <Description>Powershell-based Project and Package Manager</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/microdee/pppm</PackageProjectUrl>
    <RepositoryUrl>https://github.com/microdee/pppm</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hjson" Version="3.0.0" />
    <PackageReference Include="PowerShellStandard.Library" Version="5.1.0-preview-06">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Unimpressive.Core\Unimpressive.Core\Unimpressive.Core.csproj" />
    <ProjectReference Include="..\Unimpressive.Core\Unimpressive.Poweshell\Unimpressive.Poweshell.csproj" />
  </ItemGroup>

</Project>
